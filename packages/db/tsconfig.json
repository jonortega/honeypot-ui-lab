{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "declarationMap": false,
        "emitDeclarationOnly": false,
        "sourceMap": false,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "types": [
            "node",
            "better-sqlite3"
        ]
    },
    "include": [
        "src"
    ]
}